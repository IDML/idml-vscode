{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "idml",
	"patterns": [
		{
			"include": "#block"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#refs"
		},
		{
			"include": "#outputfield"
		},
		{
			"include": "#functioncall"
		}
	],
	"repository": {
		"functioncall": {
			"patterns": [{
				"name": "function.call",
				"captures": {
					"1": {"name": "entity.name.function"}
				},
				"match": "(\\w+)\\(.*\\)"
			}]
		},
		"outputfield": {
			"patterns": [{
				"name": "variable.name.language.idml",
				"match": "^\\w+(.\\w+)+"
			}]
		},
		"refs": {
			"patterns": [{
				"name": "variable.name",
				"match": "[@\\$][a-zA-Z_0-9]+"
			}]	
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.integer.idml",
				"match": "-?[0-9]+"
			},{
				"name": "constant.numeric.float.idml",
				"match": "-?[0-9].[0-9]+"
			}]
		},
		"block": {
			"patterns": [{
				"name": "entity.name.class.idml",
				"match": "^\\[(.*)\\]$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.idml",
				"match": "\\b(if|then|else|match|and|or|exists|let)\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "entity.name.class.idml",
				"match": "\\b(this|root|true|false)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.idml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.idml",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.hash.idml",
			"begin": "#",
			"end": "\n",
			"patterns": [
				{
					"name": "constant.character.escape.idml",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.idml",
				"match": "\\b(_|<|>|<=|>=|\\/|-|\\+|and|or|==|!=|in|exists|not)\\b"
			}]
		}

	},
	"scopeName": "source.idml"
}
