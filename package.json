{
    "name": "idml",
    "displayName": "IDML",
    "description": "Ingestion Data Mapping Language support, including interactive debugging.",
    "version": "1.0.6",
    "icon": "img/logo.png",
    "publisher": "idml",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/idml/idml-vscode"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Languages",
        "Other"
    ],
    "contributes": {
        "languages": [
            {
                "id": "idml",
                "aliases": [
                    "IDML",
                    "idml"
                ],
                "extensions": [
                    ".idml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "idml",
                "scopeName": "source.idml",
                "path": "./syntaxes/idml.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "idml.run",
                "title": "Open IDMLd session"
            },
            {
                "command": "idml.input",
                "title": "Register as input for IDMLd"
            },
            {
                "command": "idml.code",
                "title": "Register as code for IDMLd"
            }
        ]
    },
    "activationEvents": [
        "onCommand:idml.run",
        "onCommand:idml.input",
        "onCommand:idml.code"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "@types/axios": "^0.14.0",
        "@types/reconnectingwebsocket": "^1.0.1",
        "axios": "^1.6.4",
        "generator-code": "^1.1.41",
        "reconnectingwebsocket": "^1.0.0",
        "vsce": "^1.54.0",
        "vscode": "^1.1.22",
        "yo": "^4.0.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.2",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.22"
    }
}
